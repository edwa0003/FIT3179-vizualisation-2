{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Startup Ecosystem Ranking Map (2023)",
  "width": 800,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 300,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 1000,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 20],
      "bind": {
        "input": "select",
        "options": [
          [0, 20],
          [-75, 38],
          [-120, 37],
          [10, 50],
          [100, 35]
        ],
        "labels": ["Global", "US East Coast", "US West Coast", "Europe", "China"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "land"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "black",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/top_40_startup_cities_stats.csv",
        "format": {"type": "csv"}
      },
      "mark": {
        "type": "circle",
        "color": "steelblue",
        "opacity": 0.6
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Rank",
          "type": "quantitative",
          "title": "Rank",
          "scale": {"range": [300, 50]}
        },
        "tooltip": [
          {"field": "Ecosystems", "type": "nominal", "title": "Ecosystem"},
          {"field": "Rank", "type": "ordinal", "title": "Rank"},
          {"field": "Region", "type": "nominal", "title": "Region"},
          {"field": "Performance", "type": "quantitative", "title": "Performance"},
          {"field": "Funding", "type": "quantitative", "title": "Funding"},
          {"field": "Connectedness", "type": "quantitative", "title": "Connectedness"},
          {"field": "Market Reach", "type": "quantitative", "title": "Market Reach"},
          {"field": "Talent", "type": "quantitative", "title": "Talent"},
          {"field": "Knowledge", "type": "quantitative", "title": "Knowledge"},
          {"field": "Improvement from GSER 2022", "type": "quantitative", "title": "Improvement from GSER 2022"}
        ]
      }
    },
    {
      "mark": "text",
      "data": {
        "values": [
          {
            "longitude": -30,  
            "latitude": 40,   
            "text": "Newest addition in the group"
          }
        ]
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"},
        "size": {"value": 10},  
        "color": {"value": "black"}
      },
      "text": {
        "align": "left",
        "baseline": "middle"
      }
    },
    {
      "mark": {
        "type": "line",
        "stroke": "black",
        "strokeWidth": 2
      },
      "data": {
        "values": [
          {"longitude": 8.5417, "latitude": 47.3769},  
          {"longitude": -30, "latitude": 41}       
        ]
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"}
      }
    },
    {
      "mark": "text",
      "data": {
        "values": [
          {
            "longitude": -40, 
            "latitude": 20,  
            "text": "Country with the most startup ecosystems"
          }
        ]
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"},
        "size": {"value": 10},  
        "color": {"value": "black"}
      },
      "text": {
        "align": "left",
        "baseline": "middle"
      }
    },
    {
      "mark": {
        "type": "line",
        "stroke": "black",
        "strokeWidth": 2
      },
      "data": {
        "values": [
          {"longitude": -95.7129, "latitude": 37.0902}, 
          {"longitude": -62, "latitude": 20}            
        ]
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "background": "#f0f0f0"
  }
}
