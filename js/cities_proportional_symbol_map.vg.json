{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 800,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
    "format": {
      "type": "topojson",
      "feature": "land"
    }
  },
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "properties.name",
          "type": "nominal",
          "title": "Country"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/top_50_startup_cities_stats.csv"
      },
      "mark": {
        "type": "circle",
        "color": "steelblue",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "Development score",
          "type": "quantitative",
          "title": "Development Score",
          "scale": {
            "domain": [0, 100],
            "range": [10, 300]
          }
        },
        "tooltip": [
          {"field": "City", "type": "nominal"},
          {"field": "Development score", "type": "quantitative"},
          {"field": "Capital raised", "type": "quantitative"},
          {"field": "Growth score", "type": "quantitative"},
          {"field": "Deal count", "type": "quantitative"},
          {"field": "Exit value", "type": "quantitative"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "region",
      "value": "World",
      "bind": {
        "input": "select",
        "options": ["World", "North America", "Europe", "East Asia"],
        "labels": ["World", "North America", "Europe", "East Asia"]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#f8f9fa"
  }
}