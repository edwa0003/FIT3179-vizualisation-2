{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Startup Cities Development Score Map",
  "width": 1200,
  "height": 800,
  "params": [
    {
      "name": "zoom_level",
      "value": 300,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 1000,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [100, 0],
      "bind": {
        "input": "select",
        "options": [
          [100, 0],
          [-60, 40],
          [150, 30],
          [50, 50]
        ],
        "labels": ["Global", "United States", "China", "Europe"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": { "type": "topojson", "feature": "land" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "properties.name",
          "type": "nominal",
          "title": "Country"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "black",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/top_50_startup_cities_stats.csv",
        "format": { "type": "csv" }
      },
      "mark": {
        "type": "circle",
        "color": "steelblue",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "Development score",
          "type": "quantitative",
          "title": "Development Score",
          "scale": {
            "domain": [0, 100],
            "range": [10, 500]
          }
        },
        "tooltip": [
          { "field": "City", "type": "nominal" },
          { "field": "Development score", "type": "quantitative" },
          { "field": "Capital raised", "type": "quantitative" },
          { "field": "Growth score", "type": "quantitative" },
          { "field": "Deal count", "type": "quantitative" },
          { "field": "Exit value", "type": "quantitative" }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#f8f9fa"
  }
}
