{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "PPP and PPP per Capita of Countries (2013 - 2023)",
  "data": {
    "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/PPP_from_2013_to_2023_billion.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2013,
      "bind": {
        "input": "range",
        "min": 2013,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia and New Zealand",
          "Central Asia",
          "Eastern Asia",
          "Eastern Europe",
          "Latin America and the Caribbean",
          "Melanesia",
          "Micronesia",
          "Northern Africa",
          "Northern America",
          "Northern Europe",
          "Polynesia",
          "South-eastern Asia",
          "Southern Asia",
          "Southern Europe",
          "Sub-Saharan Africa",
          "Western Asia",
          "Western Europe"
        ],
        "labels": [
          "Show All",
          "Australia and New Zealand",
          "Central Asia",
          "Eastern Asia",
          "Eastern Europe",
          "Latin America and the Caribbean",
          "Melanesia",
          "Micronesia",
          "Northern Africa",
          "Northern America",
          "Northern Europe",
          "Polynesia",
          "South-eastern Asia",
          "Southern Asia",
          "Southern Europe",
          "Sub-Saharan Africa",
          "Western Asia",
          "Western Europe"
        ],
        "name": "Select Region: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_selection"},
    {"filter": "Region_selection == null || datum.Region == Region_selection"},
    {"filter": "datum.PPP != null && datum.PPP_per_capita != null"}
  ],
  "encoding": {
    "x": {
      "field": "PPP",
      "type": "quantitative",
      "title": "PPP (Billions)",
      "scale": {"type": "log"}
    },
    "y": {
      "field": "PPP_per_capita",
      "type": "quantitative",
      "title": "PPP per Capita",
      "scale": {"type": "log"}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "PPP",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 50, 100, 500],
            "range": [10, 50, 100, 200, 300]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "legend": {"title": "Region"}
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "PPP", "type": "quantitative", "format": ","},
          {"field": "PPP_per_capita", "type": "quantitative", "format": ","},
          {"field": "Year", "type": "ordinal"}
        ]
      }
    }
  ]
}
