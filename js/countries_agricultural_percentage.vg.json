{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map of countries shaded based on their Agricultural (%) of PPP.",
  "data": {
    "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
    "format": {
      "type": "topojson",
      "feature": "countries"
    }
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/PPP_sector_composition.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "Country Code",
        "fields": ["Country", "Agricultural (%)", "Industrial (%)", "Service (%)", "Agricultural (US$MM)", "Industrial (US$MM)", "Service (US$MM)"]
      },
      "default": null
    },
    {
      "filter": "datum['Agricultural (%)'] != null && datum['Agricultural (%)'] >= agriPercentFilter && datum['Agricultural (US$MM)'] >= agriUsdFilter"
    }
  ],
  "params": [
    {
      "name": "agriPercentFilter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 65,
        "step": 1,
        "name": "Minimum Agricultural (%)"
      }
    },
    {
      "name": "agriUsdFilter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000000,
        "step": 100000,
        "name": "Minimum Agricultural (US$MM)"
      }
    }
  ],
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Agricultural (%)",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "domain": [1, 65],
        "scheme": "greens"
      },
      "title": "Agricultural (%) of PPP"
    },
    "opacity": {
      "condition": {
        "test": "datum['Agricultural (%)'] >= agriPercentFilter && datum['Agricultural (US$MM)'] >= agriUsdFilter",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Agricultural (%)", "type": "quantitative", "title": "Agricultural (%)"},
      {"field": "Agricultural (US$MM)", "type": "quantitative", "title": "Agricultural (US$MM)"},
      {"field": "Industrial (%)", "type": "quantitative", "title": "Industrial (%)"},
      {"field": "Industrial (US$MM)", "type": "quantitative", "title": "Industrial (US$MM)"},
      {"field": "Service (%)", "type": "quantitative", "title": "Service (%)"},
      {"field": "Service (US$MM)", "type": "quantitative", "title": "Service (US$MM)"}
    ]
  },
  "projection": {
    "type": "equalEarth"
  },
  "width": 800,
  "height": 500
}