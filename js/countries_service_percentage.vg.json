{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Choropleth map of countries shaded based on their Service (%) and Service (US$MM) of PPP.",
    "data": {
      "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
      "format": {
        "type": "topojson",
        "feature": "countries"
      }
    },
    "transform": [
      {
        "lookup": "id",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/PPP_sector_composition.csv",
            "format": {
              "type": "csv"
            }
          },
          "key": "Country Code",
          "fields": ["Country", "Agricultural (%)", "Industrial (%)", "Service (%)", "Agricultural (US$MM)", "Industrial (US$MM)", "Service (US$MM)"]
        },
        "default": null
      },
      {
        "filter": "datum['Service (%)'] != null && datum['Service (%)'] >= servicePercentFilter && datum['Service (US$MM)'] >= serviceUsdFilter"
      }
    ],
    "params": [
      {
        "name": "servicePercentFilter",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100,
          "step": 1,
          "name": "Minimum Service (%)"
        }
      },
      {
        "name": "serviceUsdFilter",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 15000000,
          "step": 100000,
          "name": "Minimum Service (US$MM)"
        }
      }
    ],
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "Service (%)",
        "type": "quantitative",
        "scale": {
          "type": "symlog",
          "constant": 1,
          "domain": [28, 100],
          "scheme": "purples"
        },
        "title": "Service (%) of PPP"
      },
      "opacity": {
        "condition": {
          "test": "datum['Service (%)'] >= servicePercentFilter && datum['Service (US$MM)'] >= serviceUsdFilter",
          "value": 1
        },
        "value": 0.2
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Service (%)", "type": "quantitative", "title": "Service (%)"},
        {"field": "Service (US$MM)", "type": "quantitative", "title": "Service (US$MM)"},
        {"field": "Daily Median Income (USD)", "type": "quantitative", "title": "Daily Median Income (USD)"}
      ]
    },
    "projection": {
      "type": "equalEarth"
    },
    "width": 800,
    "height": 500
  }