{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Service Sector Role in Economy (2023)",
  "description": "Choropleth map of countries shaded based on their Service (%) and Service (US$MM) of PPP.",
  "width": 800,
  "height": 500,
  "params": [
    {
      "name": "servicePercentFilter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1,
        "name": "Minimum Service (%)"
      }
    },
    {
      "name": "serviceUsdFilter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 15000000,
        "step": 100000,
        "name": "Minimum Service (US$MM)"
      }
    },
    {
      "name": "zoom_level",
      "value": 300,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 1000,
        "step": 50,
        "name": "Zoom Level: "
      }
    },
    {
      "name": "center_to",
      "value": [50, 0],
      "bind": {
        "input": "select",
        "options": [
          [50, 0],
          [-61.0242, 14.6415],
          [-63.5887, -16.2902],
          [2.2137, 46.6034],
          [21.0059, 44.0165],
          [0.8248, 8.6195],
          [32.2903, 1.3733],
          [24.6849, -22.3285],
          [51.1839, 25.3548],
          [64.5853, 41.3775],
          [104.1954, 35.8617],
          [103.8198, 1.3521],
          [179.194, -7.1095]
        ],
        "labels": [
          "World",
          "Martinique",
          "Bolivia",
          "France",
          "Serbia",
          "Togo",
          "Uganda",
          "Botswana",
          "Qatar",
          "Uzbekistan",
          "China",
          "Singapore",
          "Tuvalu"
        ],
        "name": "Focus Point: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {
          "type": "topojson",
          "feature": "countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"value": "Data not available"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/main/data/service_percentage_and_median_income.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "Country Code",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
              "format": {
                "type": "topojson",
                "feature": "countries"
              }
            },
            "key": "id"
          },
          "as": "geo"
        },
        {
          "calculate": "datum['Service (%)']",
          "as": "service_percent"
        },
        {
          "calculate": "datum['Service (%)'] >= servicePercentFilter && datum['Service (US$MM)'] >= serviceUsdFilter",
          "as": "passedFilter"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "condition": {
            "test": "datum.passedFilter == false",
            "value": "darkgray"
          },
          "field": "service_percent",
          "type": "quantitative",
          "scale": {
            "type": "symlog",
            "constant": 1,
            "domain": [28, 100],
            "scheme": "purples"
          },
          "legend": {
            "title": "Service (%) of PPP"
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "service_percent",
            "type": "quantitative",
            "title": "Service (%)",
            "format": ".2f"
          },
          {
            "field": "Service (US$MM)",
            "type": "quantitative",
            "title": "Service (US$MM)"
          }
        ]
      }
    }
  ]
}
