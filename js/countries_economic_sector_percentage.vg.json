{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Economic Sector Composition by Country",
  "data": {
    "url": "world-110m.json",
    "format": {
      "type": "topojson",
      "feature": "countries"
    }
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "PPP_sector_composition.csv",
          "format": {"type": "csv"}
        },
        "key": "country code",
        "fields": ["Agricultural (%)", "Industrial (%)", "Service (%)"]
      }
    },
    {
      "calculate": "datum['Agricultural (%)']",
      "as": "Agricultural"
    },
    {
      "calculate": "datum['Industrial (%)']",
      "as": "Industrial"
    },
    {
      "calculate": "datum['Service (%)']",
      "as": "Service"
    },
    {
      "calculate": "sector == 'Agricultural' ? datum['Agricultural (%)'] : sector == 'Industrial' ? datum['Industrial (%)'] : datum['Service (%)']",
      "as": "percentage"
    }
  ],
  "projection": {"type": "mercator"},
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "percentage",
      "type": "quantitative",
      "scale": {
        "domain": [0, 100],
        "range": ["#fcae91", "#f03b20", "#bd0026"]
      },
      "title": "Economic Sector (%)"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Agricultural", "type": "quantitative", "title": "Agriculture (%)"},
      {"field": "Industrial", "type": "quantitative", "title": "Industry (%)"},
      {"field": "Service", "type": "quantitative", "title": "Service (%)"}
    ]
  },
  "params": [
    {
      "name": "sector",
      "value": "Agricultural",
      "bind": {
        "input": "select",
        "options": ["Agricultural", "Industrial", "Service"],
        "labels": ["Agricultural (%)", "Industrial (%)", "Service (%)"],
        "name": "Select Sector: "
      }
    }
  ]
}
