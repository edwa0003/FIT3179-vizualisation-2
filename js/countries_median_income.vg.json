{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Choropleth map of countries shaded based on their Daily Median Income.",
    "data": {
      "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
      "format": {
        "type": "topojson",
        "feature": "countries"
      }
    },
    "layer": [
      {
        "transform": [
          {
            "lookup": "id",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/service_percentage_and_median_income.csv",
                "format": {
                  "type": "csv"
                }
              },
              "key": "Country Code",
              "fields": ["Country", "Daily Median Income"]
            },
            "default": null
          },
          {
            "filter": "isValid(datum['Daily Median Income'])"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "encoding": {
          "color": {
            "field": "Daily Median Income",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "scheme": "blues"
            },
            "title": "Daily Median Income"
          },
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Daily Median Income", "type": "quantitative", "title": "Daily Median Income"}
          ]
        }
      },
      {
        "transform": [
          {
            "lookup": "id",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/service_percentage_and_median_income.csv",
                "format": {
                  "type": "csv"
                }
              },
              "key": "Country Code",
              "fields": ["Country", "Daily Median Income"]
            },
            "default": null
          },
          {
            "filter": "!isValid(datum['Daily Median Income'])"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 0.5,
          "fill": "#ddd"
        },
        "encoding": {
          "tooltip": {
            "value": {"signal": "'Data is not available'"}
          }
        }
      }
    ],
    "projection": {
      "type": "equalEarth"
    },
    "width": 800,
    "height": 500
  }
  