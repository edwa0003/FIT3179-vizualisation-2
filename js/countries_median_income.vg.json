{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Daily Median Income by Country (2023)",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "equalEarth",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 300,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 1000,
        "step": 50,
        "name": "Zoom Level: "
      }
    },
    {
      "name": "center_to",
      "value": [50, 0],
      "bind": {
        "input": "select",
        "options": [
          [50, 0],
          [-61.0242, 14.6415],
          [-63.5887, -16.2902],
          [2.2137, 46.6034],
          [21.0059, 44.0165],
          [0.8248, 8.6195],
          [32.2903, 1.3733],
          [24.6849, -22.3285],
          [51.1839, 25.3548],
          [64.5853, 41.3775],
          [104.1954, 35.8617],
          [103.8198, 1.3521],
          [179.194, -7.1095]
        ],
        "labels": [
          "World", "Martinique", "Bolivia", "France", "Serbia", "Togo", "Uganda", "Botswana", "Qatar", "Uzbekistan", "China", "Singapore", "Tuvalu"
        ],
        "name": "Focus Point: "
      }
    },
    {
      "name": "income_filter",
      "value": 50,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 75,
        "step": 1,
        "name": "Income Filter:"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {
          "type": "topojson",
          "feature": "countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "value": "Data is not available"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/service_percentage_and_median_income.csv"
      },
      "transform": [
        {
          "lookup": "Country Code",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
              "format": {
                "type": "topojson",
                "feature": "countries"
              }
            },
            "key": "id"
          },
          "as": "geo"
        },
        {
          "calculate": "datum['Daily Median Income'] > 0 ? datum['Daily Median Income'] : null",
          "as": "daily_median_income"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "condition": {
            "test": "datum.daily_median_income > income_filter",
            "value": "darkgray"
          },
          "field": "daily_median_income",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "scheme": "blues"
          },
          "legend": {
            "title": "Daily Median Income (USD)"
          }
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "daily_median_income",
            "type": "quantitative",
            "title": "Daily Median Income (USD)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": "text",
      "data": {
        "values": [
          {
            "longitude": 70,
            "latitude": 3,
            "text": "Popular outsourcing destination"
          }
        ]
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"},
        "color": {"value": "black"}
      }
    },
    {
      "mark": {
        "type": "line",
        "stroke": "black",
        "strokeWidth": 1
      },
      "data": {
        "values": [
          {"longitude": 80, "latitude": 20}, 
          {"longitude": 70, "latitude": 5}
        ]
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"}
      }
    },
    {
