{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Choropleth map of countries shaded based on their Industrial (%) and Industrial (US$MM) of PPP.",
    "data": {
      "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
      "format": {
        "type": "topojson",
        "feature": "countries"
      }
    },
    "transform": [
      {
        "lookup": "id",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/PPP_sector_composition.csv",
            "format": {
              "type": "csv"
            }
          },
          "key": "Country Code",
          "fields": ["Country", "Agricultural (%)", "Industrial (%)", "Service (%)", "Agricultural (US$MM)", "Industrial (US$MM)", "Service (US$MM)"]
        },
        "default": null
      },
      {
        "filter": "datum['Industrial (%)'] != null && datum['Industrial (%)'] >= indusPercentFilter && datum['Industrial (US$MM)'] >= indusUsdFilter"
      }
    ],
    "params": [
      {
        "name": "indusPercentFilter",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 62,
          "step": 1,
          "name": "Minimum Industrial (%)"
        }
      },
      {
        "name": "indusUsdFilter",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 9500000,
          "step": 100000,
          "name": "Minimum Industrial (US$MM)"
        }
      }
    ],
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "Industrial (%)",
        "type": "quantitative",
        "scale": {
          "type": "symlog",
          "constant": 1,
          "domain": [0, 62],
          "scheme": "blues"
        },
        "title": "Industrial (%) of PPP"
      },
      "opacity": {
        "condition": {
          "test": "datum['Industrial (%)'] >= indusPercentFilter && datum['Industrial (US$MM)'] >= indusUsdFilter",
          "value": 1
        },
        "value": 0.2
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Agricultural (%)", "type": "quantitative", "title": "Agricultural (%)"},
        {"field": "Agricultural (US$MM)", "type": "quantitative", "title": "Agricultural (US$MM)"},
        {"field": "Industrial (%)", "type": "quantitative", "title": "Industrial (%)"},
        {"field": "Industrial (US$MM)", "type": "quantitative", "title": "Industrial (US$MM)"},
        {"field": "Service (%)", "type": "quantitative", "title": "Service (%)"},
        {"field": "Service (US$MM)", "type": "quantitative", "title": "Service (US$MM)"}
      ]
    },
    "projection": {
      "type": "equalEarth"
    },
    "width": 800,
    "height": 500
  }