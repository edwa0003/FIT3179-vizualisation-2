{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-vizualisation-2/refs/heads/main/data/ease_of_business_ranking.csv"
  },
  "params": [
    {
      "name": "page",
      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 9, "step": 1}
    }
  ],
  "transform": [
    {
      "filter": "datum['Global rank'] > page * 20 && datum['Global rank'] <= (page + 1) * 20"
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "y": {
      "field": "Economy",
      "type": "nominal",
      "sort": {
        "field": "Global rank",
        "order": "ascending"
      },
      "title": "Country"
    },
    "x": {
      "field": "Global rank",
      "type": "quantitative",
      "title": "Global Rank"
    },
    "tooltip": [
      {"field": "Economy", "type": "nominal"},
      {"field": "Global rank", "type": "quantitative"},
      {"field": "Starting a business", "type": "quantitative"},
      {"field": "Dealing with construction permits", "type": "quantitative"},
      {"field": "Getting electricity", "type": "quantitative"},
      {"field": "Registering property", "type": "quantitative"},
      {"field": "Getting credit", "type": "quantitative"},
      {"field": "Protecting minority investors", "type": "quantitative"},
      {"field": "Paying taxes", "type": "quantitative"},
      {"field": "Trading across borders", "type": "quantitative"},
      {"field": "Enforcing contracts", "type": "quantitative"},
      {"field": "Resolving insolvency", "type": "quantitative"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}
